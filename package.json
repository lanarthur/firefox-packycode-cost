{
  "name": "packy-cost",
  "displayName": "PackyCode Cost",
  "version": "1.0.0",
  "description": "PackyCode 使用额度和预算监控插件，实时查看每日和每月额度使用情况",
  "author": "Mashiro",
  "keywords": [
    "packycode",
    "api",
    "budget",
    "monitoring",
    "usage",
    "cost",
    "browser-extension",
    "chrome-extension"
  ],
  "homepage": "https://github.com/94mashiro/packycode-cost",
  "repository": {
    "type": "git",
    "url": "https://github.com/94mashiro/packycode-cost.git"
  },
  "bugs": {
    "url": "https://github.com/94mashiro/packycode-cost/issues"
  },
  "license": "MIT",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "pnpm build"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "clsx": "^2.1.1",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "postcss": "^8.5.6",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.17",
    "typescript": "5.3.3",
    "typescript-eslint": "^8.36.0"
  },
  "manifest": {
    "host_permissions": [
      "https://www.packycode.com/*",
      "https://packy.te.sb/*",
      "https://packy-status.te.sb/*",
      "https://analytics.te.sb/*"
    ],
    "permissions": [
      "cookies",
      "storage",
      "tabs"
    ]
  }
}
