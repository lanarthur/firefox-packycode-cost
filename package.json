{
  "name": "packy-cost",
  "displayName": "PackyCode Cost",
  "version": "1.2.0",
  "description": "PackyCode 使用额度和预算监控插件，实时查看每日和每月额度使用情况",
  "author": "lanarthur",
  "keywords": [
    "packycode",
    "api",
    "budget",
    "monitoring",
    "usage",
    "cost",
    "browser-extension",
    "chrome-extension",
    "firefox-extension",
    "firefox-addon"
  ],
  "homepage": "https://github.com/lanarthur/firefox-packycode-cost",
  "repository": {
    "type": "git",
    "url": "https://github.com/lanarthur/firefox-packycode-cost.git"
  },
  "bugs": {
    "url": "https://github.com/lanarthur/firefox-packycode-cost/issues"
  },
  "license": "MIT",
  "scripts": {
    "dev": "plasmo dev",
    "dev:firefox": "plasmo dev --target=firefox-mv2",
    "build": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv2",
    "package": "plasmo package",
    "package:firefox": "plasmo package --target=firefox-mv2",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "pnpm build"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "clsx": "^2.1.1",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@types/webextension-polyfill": "^0.12.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "postcss": "^8.5.6",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.17",
    "typescript": "5.3.3",
    "typescript-eslint": "^8.36.0",
    "webextension-polyfill": "^0.12.0"
  },
  "manifest": {
    "host_permissions": [
      "https://www.packycode.com/*",
      "https://packy.te.sb/*",
      "https://packy-status.te.sb/*"
    ],
    "permissions": [
      "cookies",
      "storage",
      "tabs",
      "alarms",
      "activeTab"
    ],
    "background": {
      "persistent": false
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "packycode-cost@mashiro.dev"
      }
    },
    "content_security_policy": "script-src 'self'; object-src 'self';"
  }
}
